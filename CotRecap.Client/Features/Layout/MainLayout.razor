@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="fas fa-solid fa-bars" Edge="Edge.Start" OnClick="@(() => OpenDrawer(Anchor.Start))" />
        <MudText Typo="Typo.h4">CotRecap</MudText>
        <MudSpacer />
        <MudIconButton Icon="fas fa-solid fa-right-from-bracket" Edge="Edge.End" />
    </MudAppBar>
    <MudPaper>
        <MudDrawer @bind-Open="@_open" Anchor="@_anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
            <MudDrawerHeader>
                <MudText Typo="Typo.h5">Reports</MudText>
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavGroup Title="Disaggregated" Expanded="true" HideExpandIcon="true">
                    <MudNavGroup Title="Agriculture" Expanded="false">
                        <MudNavLink Href="/dairy-products" Icon="fas fa-solid fa-cow">Dairy Products</MudNavLink>
                        <MudNavLink Href="/fiber" Icon="fas fa-solid fa-rug">Fiber</MudNavLink>  
                        <MudNavLink Href="/foodstuffs-softs" Icon="fas fa-solid fa-cubes-stacked">Foodstuffs | Softs</MudNavLink>
                        <MudNavLink Href="/grains" Icon="fas fa-solid fa-wheat-awn">Grains</MudNavLink>       
                        <MudNavLink Href="/livestock-meat-products" Icon="fas fa-solid fa-drumstick-bite">Livestock | Meat Products</MudNavLink>
                        <MudNavLink Href="/oilseed-and-products" Icon="fas fa-solid fa-bottle-droplet">Oilseed and Products</MudNavLink>
                    </MudNavGroup>
                    <MudNavGroup Title="Natural Resources" Expanded="false">
                        <MudNavLink Href="/base-metals" Icon="fas fa-solid fa-industry">Base Metals</MudNavLink>
                        <MudNavLink Href="/electricity-and-sources" Icon="fas fa-solid fa-plug">Electricity and Sources</MudNavLink>
                        <MudNavLink Href="/emissions" Icon="fas fa-solid fa-smog">Emissions</MudNavLink>  
                        <MudNavLink Href="/natural-gas-and-products" Icon="fas fa-solid fa-fire-flame-curved">Natural Gas and Products</MudNavLink>
                        <MudNavLink Href="/petroleum-and-products" Icon="fas fa-solid fa-oil-well">Petroleum and Products</MudNavLink>       
                        <MudNavLink Href="/precious-metals" Icon="fas fa-solid fa-vault">Precious Metals</MudNavLink>
                        <MudNavLink Href="/wood-products" Icon="fas fa-solid fa-pallet">Wood Products</MudNavLink>
                    </MudNavGroup>  
                </MudNavGroup>
                <MudNavGroup Title="Traders in Financial Futures" Expanded="true" HideExpandIcon="true">
                    <MudNavGroup Title="Financial Instruments" Expanded="false">
                        <MudNavLink Href="/cryptocurrencies" Icon="fas fa-solid fa-bitcoin-sign">Cryptocurrencies</MudNavLink>
                        <MudNavLink Href="/currency" Icon="fas fa-solid fa-sack-dollar">Currency</MudNavLink>
                        <MudNavLink Href="/currency-non-major" Icon="fas fa-solid fa-money-bill-wave">Currency - Non-Major</MudNavLink>
                        <MudNavLink Href="/interest-rates-non-us-treasury" Icon="fas fa-solid fa-percent">Interest Rates - Non-U.S. Treasury</MudNavLink>
                        <MudNavLink Href="/interest-rates-us-treasury" Icon="fas fa-solid fa-building-columns">Interest Rates - U.S. Treasury</MudNavLink>
                        <MudNavLink Href="/other-financial-instruments" Icon="fas fa-solid fa-receipt">Other Financial Instruments</MudNavLink>
                        <MudNavLink Href="/stock-indices" Icon="fas fa-solid fa-arrow-trend-up">Stock Indices</MudNavLink>
                    </MudNavGroup>
                </MudNavGroup>
            </MudNavMenu>
        </MudDrawer>
    </MudPaper>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code{ 
    bool _open;
    Anchor _anchor;
    
    void OpenDrawer(Anchor anchor)
    {
        _open = true;
        _anchor = anchor;
    }
}